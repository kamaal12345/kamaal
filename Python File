pipeline {
    agent any
    stages {
        stage('Install Python') {
            steps {
                sh 'curl https://pyenv.run | bash'
                sh 'echo "export PATH="/root/.py/bin:$PATH"" >> ~/.bashrc'
                sh 'echo "eval "$(py init -)" >> ~/.bashrc'
                sh 'echo "eval "$(py virtualenv-init -)" >> ~/.bashrc'
                sh 'py install 3.8.0'
                sh 'py global 3.8.0'
            }
        }
    }
}
